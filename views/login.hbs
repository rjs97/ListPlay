{{#if error}}
	<h4>{{error}}</h4>
{{/if}}
<div class="container">
	<h1 style="float:center; margin-top: 50px;"><a href="./">ListPlay Prototype</a></h1>
	<ul class="nav nav-tabs" id="loginTabs" role="tablist">
		<li class="nav-item">
			<a class="nav-link active" data-toggle="tab" href="#login" role="tab" aria-controls="login" aria-selected="true">Login</a>
		</li>
		<li class="nav-item">
			<a class="nav-link" data-toggle="tab" href="#register" role="tab" aria-controls="register" aria-selected="false">Register</a>
		</li>
	</ul>

	<div class="tab-content" id="userForms">
		<div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
			<form class="loginForm" action="login" method="POST">
				<div class="form-group">
					<label for="usernameInputLogin">DJ Name</label>
					<input type="text" name="username" class="form-control" id="usernameInputLogin" placeholder="Enter Your DJ Name" required>
				</div>
				<div class="form-group">
					<label for="passwordInputLogin">Password</label>
					<input type="password" name="password" class="form-control" id="passwordInputLogin" placeholder="Password" required>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
		<div class="tab-pane fade" id="register" role="tabpanel" aria-labelledby="register-tab">
			<form class="loginForm" action="register" method="POST">
				<div class="form-group">
					<label for="usernameInputRegister">DJ Name</label>
					<input type="text" name="username" class="form-control" id="usernameInputRegister" placeholder="Enter Your DJ Name" required>
				</div>
				<div class="form-group">
					<label for="passwordInputRegister">Password</label>
					<input type="password" name="password" class="form-control" id="passwordInputRegister" placeholder="Password" required>
				</div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>